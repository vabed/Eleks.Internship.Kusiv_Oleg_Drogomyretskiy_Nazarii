        <TextBlock x:Name="tFName" HorizontalAlignment="Left" Margin="82,67,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Label Content="Прізвище" HorizontalAlignment="Left" Margin="3,88,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="tLName" HorizontalAlignment="Left" Margin="82,93,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TabControl Grid.Column="1" HorizontalAlignment="Left" Height="202" Margin="27,10,0,0" VerticalAlignment="Top" Width="432" ClipToBounds="True">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Controls:MetroWindow>
