<Page x:Class="VkWPF.Pages.Messenger"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VkWPF.Pages"
      mc:Ignorable="d"
      Title="Messenger" Width="500" Height="500" HorizontalAlignment="Center" VerticalAlignment="Center" Loaded="Page_Loaded">

    <Grid Width="auto" Height="auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lbxFriends" Grid.Column="0" VerticalContentAlignment="Top" HorizontalContentAlignment="Left" SelectionChanged="ListBox_SelectionChanged"/>
        <Button Background="#FFF43333" Margin="0" Content="aaaa" VerticalContentAlignment="Top" HorizontalContentAlignment="Stretch" Grid.ColumnSpan="2" Grid.Column="1"/>
    </Grid>
</Page>
